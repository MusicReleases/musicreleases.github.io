@using JakubKastner.MusicReleases.Services.BaseServices

@implements IDisposable

@inject NavigationManager NavManager
@inject ISpotifyFilterService SpotifyFilterService
@inject ISpotifyFilterUrlService SpotifyFilterUrlService


<button type="button" class="year icon-text @ButtonClass" @onclick="FilterYear">
	<i class="fas @IconClass" aria-hidden="true" @onclick="DisplayMonths" @onclick:stopPropagation="true"></i>@Year
</button>

@if (_renderMonths)
{
	<div class="month @MonthsClass">
		<MenuDateMonth Year="@Year" Months="@Months">
		</MenuDateMonth>
	</div>
}
@using Fluxor
@using Fluxor.Blazor.Web.Components
@using JakubKastner.MusicReleases.Store.ApiStore.SpotifyStore.SpotifyArtistStore
@using JakubKastner.MusicReleases.Store.ApiStore.SpotifyStore.SpotifyReleaseStore

@inherits FluxorComponent

@inject IState<SpotifyArtistState> SpotifyArtistState
@inject IState<SpotifyReleaseState> SpotifyReleaseState


<div class="menu artists buttons-rounded-l">	
	<ButtonTitle Type="_type" DisplayTitle="_displayTitle">
		<i class="fas fa-users" aria-hidden="true"></i>
	</ButtonTitle>
	
	@if (!SpotifyArtistState.Value.LoadingAny() && !SpotifyReleaseState.Value.LoadingAny())
	{
		<ButtonSearch Type="_type" OnSearching="DisplayTitle"></ButtonSearch>
		<ButtonSort Type="_type"></ButtonSort>
		<ButtonUpdate Type="_type" OnUpdating="DisplayTitle"></ButtonUpdate>
	}

	<button class="close">
		<i class="fas fa-times" aria-hidden="true"></i>
	</button>
</div>
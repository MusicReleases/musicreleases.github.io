@using Fluxor
@using Fluxor.Blazor.Web.Components
@using JakubKastner.MusicReleases.Store.ApiStore.SpotifyStore.SpotifyPlaylistsStore
@using JakubKastner.MusicReleases.Store.ApiStore.SpotifyStore.SpotifyPlaylistsTracksStore
@using static JakubKastner.MusicReleases.Base.Enums

@inherits FluxorComponent

@inject IState<SpotifyPlaylistsState> _stateSpotifyPlaylists
@inject IState<SpotifyPlaylistsTracksState> _stateSpotifyPlaylistsTracks


<div class="menu playlists buttons-rounded-l">

	<ButtonTitle Type="_type" DisplayTitle="_displayTitle">
		<i class="fas fa-bars" aria-hidden="true"></i>
	</ButtonTitle>

	@if (!_stateSpotifyPlaylists.Value.LoadingAny() && !_stateSpotifyPlaylistsTracks.Value.LoadingAny())
	{
		<ButtonSearch Type="_type" OnSearching="DisplayTitle"></ButtonSearch>
		<ButtonSort Type="_type"></ButtonSort>
		<ButtonUpdate Type="_type" OnUpdating="DisplayTitle"></ButtonUpdate>
		<ButtonNew Type="_type"></ButtonNew>
	}

	<button class="close">
		<i class="fas fa-times" aria-hidden="true"></i>
	</button>

</div>
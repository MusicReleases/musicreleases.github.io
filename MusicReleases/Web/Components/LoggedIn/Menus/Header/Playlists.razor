@using static JakubKastner.MusicReleases.Base.Enums
<div class="menu playlists buttons-rounded-l">
	<button class="show-hide icon-text left">
		<i class="fas fa-bars" aria-hidden="true"></i>
		Playlists
	</button>
	<input type="text" class="search" placeholder="Search playlist">
	<button class="search">
		<i class="fas fa-search" aria-hidden="true"></i>
	</button>
	<ButtonUpdate Type="UpdateType.Playlists"></ButtonUpdate>
	<button class="new">
		<i class="fas fa-plus" aria-hidden="true"></i>
	</button>
	<button class="close">
		<i class="fas fa-times" aria-hidden="true"></i>
	</button>
</div>
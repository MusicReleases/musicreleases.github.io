@using JakubKastner.SpotifyApi.Objects

<div class="release album box" data-release_type="album" data-release_id="@ReleaseObj.Id">
    <div class="info">
        <img src="@ReleaseObj.ImageUrl" alt="Cover" class="cover">
        <a class="name icon-text" href="@ReleaseObj.Uri" target="_blank" rel="noopener noreferrer">@ReleaseObj.Name</a>
        <Artists ArtistsObj="ReleaseObj.Artists" />
        <p class="date icon-text">
            <i class="fas fa-calendar-alt" aria-hidden="true"></i>
            <button>@ReleaseObj.ReleaseDate</button>
        </p>
        <p class="duration icon-text">
            <i class="explicit fas fa-compact-disc" title="Album release" aria-hidden="true"><span title="Explicit lyrics">E</span></i>
            <span class="sr-only">Album release</span>
            <i class="fas fa-bolt" title="New release" aria-hidden="true"></i>
            <span class="sr-only">New release</span>
            <i class="far fa-clock" aria-hidden="true"></i>00:00:00
        </p>
    </div>
</div>

@code
{
    [Parameter, EditorRequired]
    public Album ReleaseObj { get; set; }
}

@using JakubKastner.SpotifyApi.Objects

<div class="artists icon-text">
	@for (int i = 0; i < ArtistsObj.Count; i++)
	{
		var artist = ArtistsObj.ElementAt(i);

		<button class="artist" data-menu_type="artist" data-menu_artist="@artist.Id">
			@artist.Name
		</button>

		@if (i < ArtistsObj.Count - 1)
		{
			<span>•</span>
		}

	}
</div>